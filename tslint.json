{
  "extends": [
    "tslint:recommended",
    "tslint-angular",
    "tslint-config-prettier"
  ],
  "rulesDirectory": [
    "codelyzer"
  ],
  "rules": {
    "no-host-metadata-property": false,
    "member-ordering": [
      true,
      {
        "order": [
          "public-static-field",
          "public-instance-field",
          "public-constructor",
          "private-static-field",
          "private-instance-field",
          "private-constructor",
          "public-instance-method",
          "protected-instance-method",
          "private-instance-method"
        ],
        "alphabetize": false
      }
    ],
    "no-console": [
      true,
      "debug",
      "info",
      "time",
      "timeEnd",
      "trace"
    ]
  }
}
